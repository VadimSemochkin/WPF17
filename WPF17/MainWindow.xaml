<Window x:Class="WPF17.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lib="clr-namespace:WPF17;assembly=ColorPicker"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:local="clr-namespace:WPF17"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <StackPanel>
        <local:ColorPicker x:Name="colorPicker" Margin="5" 
          ColorChanged="colorPicker_ColorChanged" Color="Green">
            
        </local:ColorPicker>

        <Button Click="Get_Click" Margin="5,20,5,0" Padding="2"  Content="Получить цвет"/>
        <Button Click="Set_Click" Margin="5,0,5,0" Padding="2"  Content="Сбросить цвет"/>
        <TextBlock Name="lblColor" Margin="10"  HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
